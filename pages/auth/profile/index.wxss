/**
 * 完善资料 - 表格样式（参考微信个人信息页）
 * 以《设计规范.md》、design-system 为准
 */
.profile-page {
  min-height: 100vh;
  background: var(--bg-page);
}

.profile-content {
  padding: var(--space-2xl) var(--page-padding-x);
}

.profile-desc {
  margin-bottom: var(--space-lg);
  text-align: center;
  color: var(--text-secondary);
}

/* 表格列表 */
.profile-list {
  padding: 0;
  overflow: hidden;
}

.profile-list.card {
  padding: 0;
}

.profile-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 112rpx;
  padding: 0 var(--space-xl);
  border-bottom: 1rpx solid var(--border);
  background: transparent;
  width: 100%;
  text-align: left;
  box-sizing: border-box;
}
.profile-row::after { border: none; }

.profile-row:last-of-type {
  border-bottom: none;
}


.profile-row-label {
  flex-shrink: 0;
  width: 140rpx;
  font-size: var(--fs-body);
  color: var(--text-primary);
}

/* flex:1 占满中间；min-width:0 允许收缩；内容统一右对齐 */
.profile-row-value {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: var(--space-sm);
  height: 100%;
  overflow: hidden;
}

/* 头像：固定尺寸包装层，圆形裁剪去除外框，不受微信 button 默认样式影响 */
.profile-avatar-wrap {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: var(--radius-full);
}
.profile-avatar-btn {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1;
  display: block;
  width: 100%;
  height: 100%;
  box-shadow: none;
}
.profile-avatar-btn::after {
  border: none;
}

.profile-avatar-img {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-full);
  background: var(--avatar-placeholder-bg);
  border: 1rpx solid var(--avatar-placeholder-border);
  box-shadow: none;
}

.profile-row-arrow {
  flex-shrink: 0;
  width: 24rpx;
  height: 24rpx;
  margin-left: var(--space-md);
  opacity: 0.5;
}

/* 昵称行（含输入框） */
.profile-row-input {
  border-bottom: none;
}

.profile-row-input-field {
  flex: 1;
  min-height: 80rpx;
  min-width: 0;
  padding: 0 0 0 var(--space-md);
  font-size: var(--fs-body);
  color: var(--text-primary);
  text-align: right;
}

.profile-placeholder {
  color: var(--text-hint);
}

/* 提交按钮 */
.profile-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: var(--space-2xl);
  border-radius: var(--radius-md);
  background: var(--primary) !important;
  color: #FFFFFF !important;
  font-size: var(--fs-body);
  font-weight: 500;
  text-align: center;
}

.profile-submit[disabled] {
  opacity: 0.5;
}

/* 手机号 */
.profile-phone-masked { font-size: var(--fs-body); color: var(--text-primary); }
/* 包装层：view 控制右对齐，fake 负责视觉，button 仅作透明点击层（规避微信 button 默认样式） */
.profile-phone-btn-wrap {
  position: relative;
  flex-shrink: 0;
}
.profile-phone-btn-fake {
  padding: 0 var(--space-md);
  height: 64rpx;
  line-height: 64rpx;
  font-size: var(--fs-sm);
  color: var(--primary);
  background: transparent;
  border: 1rpx solid var(--primary);
  border-radius: var(--radius-sm);
  white-space: nowrap;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.profile-phone-btn {
  position: absolute;
  inset: 0;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  opacity: 0;
}
.profile-phone-btn::after { border: none; }
.profile-phone-manual { display: flex; align-items: center; justify-content: flex-end; gap: var(--space-sm); flex: 1; min-width: 0; }
.profile-verify-btn {
  flex-shrink: 0;
  padding: 0 var(--space-md);
  height: 64rpx;
  line-height: 64rpx;
  font-size: var(--fs-sm);
  color: var(--primary);
  background: transparent;
  border: 1rpx solid var(--primary);
  border-radius: var(--radius-sm);
}
.profile-verify-btn::after { border: none; }
