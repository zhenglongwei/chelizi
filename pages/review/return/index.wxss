/* 返厂评价页 - 17-返厂评价页 */
.return-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-lg) var(--page-padding-x);
}

.return-loading,
.return-error {
  padding: var(--space-2xl);
  text-align: center;
}

.return-back {
  color: var(--primary);
  font-size: var(--fs-body);
  margin-top: var(--space-md);
}

.return-success {
  padding: var(--space-2xl);
  text-align: center;
}

.return-success-actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  margin-top: var(--space-xl);
}

.return-scroll {
  height: 100%;
}

.return-section {
  margin-bottom: var(--space-lg);
}

.return-section-title {
  margin-bottom: var(--space-md);
}

.return-tip {
  margin-bottom: var(--space-lg);
  padding: var(--space-lg);
}

.return-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: var(--space-md);
  font-size: var(--fs-body);
  background: var(--bg-page);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

.return-upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-md);
}

.return-upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.return-thumb {
  width: 100%;
  height: 100%;
}

.return-del {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
}

.return-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.return-add-text {
  font-size: 48rpx;
  color: var(--text-hint);
}

.return-rebate-tip {
  margin: var(--space-xl) 0 var(--space-lg);
}

.return-submit {
  width: 100%;
}
