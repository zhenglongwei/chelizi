/* 追评弹窗 - 15-追评页 */
.followup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}
.followup-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-lg) var(--page-padding-x);
}
.followup-page.followup-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
  background: transparent;
}
.followup-card {
  max-width: 90%;
  max-height: 85vh;
  overflow-y: auto;
  position: relative;
}
.followup-close {
  position: absolute;
  top: var(--space-md);
  right: var(--space-md);
  width: 48rpx;
  height: 48rpx;
  font-size: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: var(--text-hint);
}
.followup-objective { margin-top: var(--space-md); }
.followup-objective .fs-body { display: block; margin-bottom: var(--space-xs); }
.followup-radio-group { display: flex; gap: var(--space-lg); }
.followup-radio-group label { display: flex; align-items: center; gap: var(--space-xs); font-size: var(--fs-body); }

.followup-loading,
.followup-error {
  padding: var(--space-2xl);
  text-align: center;
}

.followup-back {
  color: var(--primary);
  font-size: var(--fs-body);
  margin-top: var(--space-md);
}

.followup-success {
  padding: var(--space-2xl);
  text-align: center;
}

.followup-success-actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
  margin-top: var(--space-xl);
}

.followup-scroll {
  height: 100%;
}

.followup-section {
  margin-bottom: var(--space-lg);
}

.followup-section-title {
  margin-bottom: var(--space-md);
}

.followup-tip {
  margin-bottom: var(--space-lg);
  padding: var(--space-lg);
}

.followup-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: var(--space-md);
  font-size: var(--fs-body);
  background: var(--bg-page);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

.followup-upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-md);
}

.followup-upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.followup-thumb {
  width: 100%;
  height: 100%;
}

.followup-del {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
}

.followup-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.followup-add-text {
  font-size: 48rpx;
  color: var(--text-hint);
}

.followup-rebate-tip {
  margin: var(--space-xl) 0 var(--space-lg);
}

.followup-submit {
  width: 100%;
}
