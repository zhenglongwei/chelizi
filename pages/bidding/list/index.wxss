/**
 * 我的竞价列表 - 09-我的竞价列表页
 * 以《设计规范.md》、design-system 为准
 */
.bidding-list-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-lg) var(--page-padding-x);
}

/* ========== Tab 筛选 ========== */
.bidding-tabs {
  display: flex;
  gap: var(--space-md);
  margin-bottom: var(--space-xl);
  padding: var(--space-xs);
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.bidding-tab {
  flex: 1;
  padding: var(--space-md) var(--space-lg);
  border-radius: var(--radius-lg);
  font-size: var(--fs-body);
  color: var(--text-secondary);
  background: transparent;
  text-align: center;
  transition: all 0.2s ease;
}

.bidding-tab.active {
  background: var(--primary);
  color: var(--bg-card);
  font-weight: 500;
}

/* ========== 空状态 ========== */
.bidding-empty {
  padding: var(--space-2xl);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-lg);
}

.bidding-empty-icon-wrap {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-lg);
  background: var(--avatar-placeholder-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.bidding-empty-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
}

.bidding-login-link,
.bidding-link {
  color: var(--primary);
  font-size: var(--fs-body);
  font-weight: 500;
}

/* ========== 加载态 ========== */
.bidding-loading {
  padding: var(--space-2xl);
  text-align: center;
  color: var(--text-hint);
}

/* ========== 列表 ========== */
.bidding-scroll {
  height: 100%;
}

.bidding-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.bidding-card {
  overflow: hidden;
  transition: transform 0.2s ease;
}

.bidding-card:active {
  transform: scale(0.995);
}

.bidding-card-main {
  display: flex;
  gap: var(--space-lg);
  margin-bottom: var(--space-lg);
}

.bidding-card-thumb {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
  background: var(--avatar-placeholder-bg);
  display: flex;
  align-items: center;
  justify-content: center;
}

.bidding-thumb-img {
  width: 72rpx;
  height: 72rpx;
  opacity: 0.7;
}

.bidding-card-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bidding-card-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: var(--space-sm);
  margin-bottom: var(--space-md);
}

.bidding-card-title {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--text-primary);
}

.bidding-status-badge {
  flex-shrink: 0;
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: var(--fs-sm);
  font-weight: 500;
}

.bidding-status-badge.ongoing {
  color: var(--primary);
  background: rgba(37, 99, 235, 0.1);
}

.bidding-status-badge.ended {
  color: var(--text-secondary);
  background: var(--bg-placeholder);
}

.bidding-card-meta {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-lg);
}

.bidding-meta-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.bidding-meta-label {
  font-size: var(--fs-sm);
  color: var(--text-hint);
}

.bidding-meta-value {
  font-size: var(--fs-cap);
  color: var(--text-secondary);
  font-weight: 500;
}

/* ========== 操作按钮 ========== */
.bidding-card-actions {
  display: flex;
  gap: var(--space-md);
  padding-top: var(--space-lg);
  border-top: 1rpx solid var(--border-light);
}

.bidding-btn {
  flex: 1;
  min-width: 0;
  height: 64rpx;
  line-height: 64rpx;
  font-size: var(--fs-cap);
  font-weight: 500;
  border-radius: var(--radius-md);
  text-align: center;
}

.bidding-btn-primary {
  background: var(--primary);
  color: var(--bg-card);
  border: none;
}

.bidding-btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary);
  color: var(--primary);
}

.bidding-load-more {
  padding: var(--space-xl);
  text-align: center;
  color: var(--text-hint);
  font-size: var(--fs-cap);
}

.bidding-bottom-pad {
  height: var(--space-2xl);
}
