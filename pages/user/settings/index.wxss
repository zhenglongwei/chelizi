/**
 * 设置 - 以《设计规范.md》、design-system 为准
 */
.settings-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-xl) var(--page-padding-x);
}

.settings-menu {
  margin-top: var(--space-lg);
}

.settings-section {
  margin-bottom: var(--space-xl);
}

.settings-section:last-of-type {
  margin-bottom: 0;
}

.settings-section-title {
  padding: var(--space-md) var(--space-xl) var(--space-sm);
  font-size: var(--fs-sm);
  color: var(--text-hint);
  font-weight: 500;
}

.settings-section-card {
  overflow: hidden;
}

.settings-section-card.card {
  padding: 0;
}

.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-xl);
  border-bottom: 1rpx solid var(--border);
  min-height: 96rpx;
}

.settings-section-card .settings-item:last-child {
  border-bottom: none;
}

.settings-item text {
  font-size: var(--fs-body);
  color: var(--text-primary);
}

.settings-contact-btn {
  width: 100%;
  text-align: left;
  border: none;
  background: none;
}

.settings-contact-btn::after {
  border: none;
}

.settings-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

.settings-logout {
  margin-top: var(--space-2xl);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.settings-logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}
