/**
 * 定损历史 - 以《设计规范.md》、design-system 为准
 */
.history-page {
  min-height: 100vh;
  background: var(--bg-page);
}

.history-empty {
  margin: var(--space-2xl) var(--page-padding-x);
  padding: var(--space-2xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-lg);
}

.history-empty .text-muted {
  color: var(--text-hint);
}

.history-login-link, .history-link {
  color: var(--primary);
  font-size: var(--fs-body);
  font-weight: 500;
}

.history-loading {
  margin: var(--space-2xl) var(--page-padding-x);
  padding: var(--space-2xl);
  text-align: center;
  color: var(--text-hint);
}

.history-scroll {
  padding: var(--space-xl) var(--page-padding-x);
}

.history-item {
  margin-bottom: var(--space-lg);
  transition: transform 0.2s ease;
}

.history-item:active {
  transform: scale(0.995);
}

.history-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
  padding-bottom: var(--space-md);
  border-bottom: 1rpx solid var(--border-light);
}

.history-item-header text:first-child {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-item-header text:last-child {
  flex-shrink: 0;
  color: var(--text-hint);
}

.history-item-body {
  margin-bottom: var(--space-md);
}

.history-item-row {
  margin-top: var(--space-sm);
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.history-item-row:first-child {
  margin-top: 0;
}

.history-item-images {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
  margin-top: var(--space-md);
  padding-top: var(--space-md);
  border-top: 1rpx solid var(--border-light);
}

.history-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-md);
  background: var(--bg-placeholder);
}

.history-load-more {
  padding: var(--space-xl);
  text-align: center;
  color: var(--text-hint);
  font-size: var(--fs-cap);
}

.history-bottom-pad {
  height: var(--tab-bar-bottom-padding);
}
