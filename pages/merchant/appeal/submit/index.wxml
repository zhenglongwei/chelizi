<!-- 商户申诉提交 - M09 -->
<custom-nav-bar title="提交申诉" showBack="{{true}}" />
<view class="page-root merchant-appeal-submit" style="{{pageRootStyle}}">
  <view class="appeal-tip card" wx:if="{{questionLabel}}">
    <text class="fs-body">车主在评价中选择了「否」：{{questionLabel}}</text>
    <text class="text-muted fs-cap">请上传相关材料证明（如进度同步记录、配件展示照片等），申诉不利将扣分。</text>
  </view>

  <view class="appeal-upload card">
    <view class="section-head">
      <text class="section-title fs-body fw-bold">申诉材料<text class="text-error">*</text></text>
      <text class="text-muted fs-cap">至少 1 张，最多 10 张</text>
    </view>
    <view class="evidence-grid">
      <view class="evidence-thumb" wx:for="{{evidenceUrls}}" wx:key="index">
        <image src="{{item}}" mode="aspectFill" class="thumb-img"/>
        <view class="thumb-del" data-index="{{index}}" bindtap="onDelPhoto">×</view>
      </view>
      <view class="evidence-add" wx:if="{{evidenceUrls.length < 10}}" bindtap="onChoosePhoto">
        <text class="add-icon">+</text>
        <text class="add-text fs-cap">添加</text>
      </view>
    </view>
  </view>

  <view class="appeal-submit-wrap safe-area-bottom">
    <button class="btn-primary appeal-submit" disabled="{{submitting || evidenceUrls.length < 1}}" bindtap="onSubmit">
      {{submitting ? '提交中...' : '提交申诉'}}
    </button>
  </view>
</view>
