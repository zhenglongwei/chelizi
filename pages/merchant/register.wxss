/* 服务商注册 - M02 */
.merchant-register-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-2xl) var(--page-padding-x);
}

.merchant-register-content {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.merchant-register-header {
  margin-bottom: var(--space-2xl);
}

.merchant-register-title {
  display: block;
  margin-bottom: var(--space-xs);
}

.merchant-register-desc {
  display: block;
}

.merchant-register-form {
  padding: var(--space-xl);
  margin-bottom: var(--space-xl);
}

.merchant-form-item {
  margin-bottom: var(--space-lg);
}

.merchant-form-item:last-of-type {
  margin-bottom: var(--space-xl);
}

.merchant-form-label {
  display: block;
  margin-bottom: var(--space-sm);
  color: var(--text-secondary);
}

.merchant-form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 var(--space-md);
  font-size: var(--fs-body);
  color: var(--text-primary);
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

.merchant-picker-value {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 var(--space-md);
  font-size: var(--fs-body);
  color: var(--text-hint);
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: var(--radius-md);
}

.merchant-picker-value.has-value {
  color: var(--text-primary);
}

.merchant-license-first {
  margin-bottom: var(--space-xl);
}

.merchant-license-upload {
  width: 200rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.merchant-license-ocr-tip {
  display: block;
  margin-top: var(--space-sm);
}

.merchant-license-add {
  font-size: 48rpx;
  color: var(--text-hint);
}

.merchant-license-preview {
  position: relative;
  width: 200rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.merchant-license-img {
  width: 100%;
  height: 100%;
}

.merchant-license-del {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
}

.merchant-location-picker {
  margin-top: var(--space-sm);
  padding: var(--space-lg);
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: var(--radius-md);
}

.merchant-location-text {
  display: block;
  font-size: var(--fs-body);
  color: var(--text-hint);
}

.merchant-location-text.has-value {
  color: var(--text-primary);
}

.merchant-location-hint {
  display: block;
  margin-top: var(--space-xs);
  color: var(--text-hint);
}

.merchant-register-btn {
  width: 100%;
  height: 88rpx;
}

.merchant-register-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
}

.merchant-register-link {
  color: var(--primary);
}
