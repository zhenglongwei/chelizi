/* 服务商登录 - M01 */
.merchant-login-page {
  min-height: 100vh;
  background: var(--bg-page);
  padding: var(--space-2xl) var(--page-padding-x);
}

.merchant-login-content {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.merchant-login-header {
  margin-bottom: var(--space-2xl);
}

.merchant-login-title {
  display: block;
  margin-bottom: var(--space-xs);
}

.merchant-login-desc {
  display: block;
}

.merchant-login-form {
  padding: var(--space-xl);
  margin-bottom: var(--space-xl);
}

.merchant-form-item {
  margin-bottom: var(--space-lg);
}

.merchant-form-item:last-of-type {
  margin-bottom: var(--space-xl);
}

.merchant-form-label {
  display: block;
  margin-bottom: var(--space-sm);
  color: var(--text-secondary);
}

.merchant-form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 var(--space-md);
  font-size: var(--fs-body);
  color: var(--text-primary);
  background: var(--bg-card);
  border: 1rpx solid var(--border);
  border-radius: var(--radius-md);
  box-sizing: border-box;
}

.merchant-login-btn {
  width: 100%;
  height: 88rpx;
}

.merchant-login-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xs);
}

.merchant-login-link {
  color: var(--primary);
}
